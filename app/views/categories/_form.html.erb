<h1 align="center">New Category</h1>
<%= form_for(@category, :html => {class: "form-horizontal", role:"form"}) do |form| %>
<%= render 'shared/errors', obj: @category %>


    <div class="form-group">
      <div class="control-label col-sm-2">
        <%= form.label :name %>
      </div>
      <div class="col-sm-8">
        <%= form.text_field :name, placeholder: "Enter Ctegory Na,me", autofocus: true %>      
      </div>
      </div>


<div class="form-group">
    <div class="col-sm-offset-2 col-sm-10">
  <%= form.submit class: "btn btn-primary btn-lg"  %>
</div>
</div>
<% end %>