
<%= form_with(model: [ @article, @article.comments.build ], local: true) do |form| %>
<div class="form-horizontal">
  <div class="row">
    <div class="col-xs-12">
    <div class="form-group">
      <div class="control-label col-sm-2">
        <%= form.label :commenter %>
      </div>
      <div class="col-sm-8">
          <%= form.text_field :commenter %>
      </div>
    </div>

    <div class="form-group">
      <div class="control-label col-sm-2">
          <%= form.label :body %>
      </div>
      <div class="col-sm-8">
          <%= form.text_area :body %>
      </div>

    </div>


    <p>
    <%= form.submit %>
    </p>
    </div>
  </div>
</div>
<% end %>